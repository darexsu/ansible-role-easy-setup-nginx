user  {{ nginx_conf.vars.user }};
worker_processes  {{ nginx_conf.vars.worker_processes }};

error_log  {{ nginx_conf.vars.error_log }};
pid        {{ nginx_conf.vars.pidfile }};

events {
    worker_connections  {{ nginx_conf.vars.worker_connections }};
    multi_accept {{ nginx_conf.vars.multi_accept }};
}

http {
    include       {{ nginx_conf.vars.mime_file_path }};
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  {{ nginx_conf.vars.access_log }}  main;

    sendfile        {{ nginx_conf.vars.sendfile }};
    tcp_nopush      {{ nginx_conf.vars.tcp_nopush }};
    tcp_nodelay     {{ nginx_conf.vars.tcp_nodelay }};
    keepalive_timeout  {{ nginx_conf.vars.keepalive_timeout }};
    keepalive_requests {{ nginx_conf.vars.keepalive_requests }};

    include /etc/nginx/conf.d/*.conf;
}
