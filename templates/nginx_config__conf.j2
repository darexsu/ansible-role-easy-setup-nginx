user  {{ nginx_config__conf_user }};
worker_processes  {{ nginx_config__conf_worker_processes }};

error_log  {{ nginx_config__conf_error_log }};
pid        {{ nginx_config__conf_pidfile }};

events {
    worker_connections  {{ nginx_config__conf_worker_connections }};
    multi_accept {{ nginx_config__conf_multi_accept }};
}

http {
    include       {{ nginx_config__conf_mime_file_path }};
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  {{ nginx_config__conf_access_log }}  main;

    sendfile        {{ nginx_config__conf_sendfile }};
    tcp_nopush      {{ nginx_config__conf_tcp_nopush }};
    tcp_nodelay     {{ nginx_config__conf_tcp_nodelay }};
    keepalive_timeout  {{ nginx_config__conf_keepalive_timeout }};
    keepalive_requests {{ nginx_config__conf_keepalive_requests }};

    include /etc/nginx/conf.d/*.conf;
}
